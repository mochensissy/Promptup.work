        async function loadCheckInsFromServer() {
            showToast('æ­£åœ¨åŠ è½½æ‰“å¡è®°å½•...', 'loading');
            try {
                const endpoint = WORKER_URL.endsWith('/') ? `${WORKER_URL}checkins` : `${WORKER_URL}/checkins`;
                const response = await fetch(endpoint);
                if (!response.ok) {
                    console.error('Failed to load check-ins from server:', response.status, await response.text());
                    showToast('åŠ è½½æ‰“å¡è®°å½•å¤±è´¥ (æœåŠ¡å™¨é”™è¯¯)', 'error');
                    checkIns = []; 
                    document.querySelector('.toast.loading')?.remove();
                    return;
                }
                const serverData = await response.json();
                if (Array.isArray(serverData)) {
                    checkIns = serverData;
                    checkIns.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
                    showToast('æ‰“å¡è®°å½•å·²æ›´æ–°', 'success');
                } else {
                    console.error('Received non-array data for check-ins:', serverData);
                    showToast('åŠ è½½æ‰“å¡è®°å½•æ ¼å¼é”™è¯¯', 'error');
                    checkIns = [];
                }
            } catch (error) {
                console.error('Error loading check-ins:', error);
                showToast('ç½‘ç»œé”™è¯¯ï¼Œæ— æ³•åŠ è½½æ‰“å¡è®°å½•', 'error');
                checkIns = [];
            }
            document.querySelector('.toast.loading')?.remove();
        }

        async function init() {
            if (currentUser) {
                setupUserUI();
            } else {
                setupGuestUI();
            }
            addEventListeners();
            await loadCheckInsFromServer();
            showPage(currentPageId || 'overview-page');
        }

        function setupUserUI() {
            const avatarChar = currentUser.name.slice(0, 1).toUpperCase();
            userInfoDiv.innerHTML = `<div class="flex items-center space-x-3"><div class="w-10 h-10 bg-gray-200 text-gray-600 flex items-center justify-center rounded-full text-lg font-bold">${avatarChar}</div><span class="font-semibold text-gray-700 hidden sm:inline">${currentUser.name}</span></div><button id="logout-button" class="text-sm text-gray-500 hover:text-blue-500 transition-colors">é€€å‡º</button>`;
            document.getElementById('logout-button').addEventListener('click', handleLogout);
            if (currentUser.name === ADMIN_USER_FRONTEND_FLAG.name) {
                adminEditButton.classList.remove('hidden');
            } else {
                adminEditButton.classList.add('hidden');
            }
        }

        function setupGuestUI() { 
            userInfoDiv.innerHTML = `<button id="show-auth-button" class="bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-blue-600 transition-colors">ç™»å½• / æ³¨å†Œ</button>`;
            document.getElementById('show-auth-button').addEventListener('click', () => {
                authModal.classList.remove('hidden');
                loginForm.reset(); registerForm.reset(); 
                document.getElementById('login-error').classList.add('hidden');
                document.getElementById('register-error').classList.add('hidden');
            });
            adminEditButton.classList.add('hidden');
        }
        
        async function showPage(pageId) {
            currentPageId = pageId;
            const protectedPages = ['checkin-page', 'my-records-page', 'practice-square-page'];
            if (protectedPages.includes(pageId) && !currentUser) {
                authModal.classList.remove('hidden');
                showToast('è¯·å…ˆç™»å½•æˆ–æ³¨å†Œä»¥è®¿é—®æ­¤é¡µé¢', 'error');
                document.dispatchEvent(new CustomEvent('navigateToPage', { detail: 'overview-page' }));
                return;
            }

            if (['my-records-page', 'practice-square-page'].includes(pageId)) {
                 await loadCheckInsFromServer(); 
            }

            allPages.forEach(page => page.classList.add('hidden'));
            const targetPage = document.getElementById(pageId);
            if (targetPage) {
                 targetPage.classList.remove('hidden');
            } else {
                document.getElementById('overview-page').classList.remove('hidden');
                pageId = 'overview-page'; 
                currentPageId = 'overview-page';
            }
            
            navLinks.forEach(link => {
                link.classList.remove('text-blue-500', 'font-bold');
                if (link.dataset.page === pageId) {
                    link.classList.add('text-blue-500', 'font-bold');
                }
            });

            switch (pageId) {
                case 'overview-page': renderTaskOverview(); break;
                case 'checkin-page': renderCheckInForm(); break; 
                case 'my-records-page': renderMyRecords(); break;
                case 'practice-square-page': renderPracticeSquare(); break;
            }
        }
        
        function renderTaskOverview() {  const contentDiv = document.getElementById('overview-content'); contentDiv.innerHTML = `<div class="text-center mb-8"><p class="text-lg font-semibold text-blue-600" ${isAdminEditing ? 'contenteditable="true" data-key="title"' : ''}>${taskData.title}</p><p class="mt-2 text-gray-600 max-w-2xl mx-auto" ${isAdminEditing ? 'contenteditable="true" data-key="goal"' : ''}>${taskData.goal}</p><p class="mt-2 text-sm text-gray-500" ${isAdminEditing ? 'contenteditable="true" data-key="period"' : ''}>${taskData.period}</p></div>${taskData.weeks.map((week, weekIndex) => `<div class="pt-6"><h3 class="text-xl font-bold text-gray-800 border-b pb-2 mb-4" ${isAdminEditing ? `contenteditable="true" data-key="week_title" data-week-index="${weekIndex}"` : ''}>${week.title}</h3><div class="space-y-6">${week.tasks.map((task, taskIndex) => `<div class="flex flex-col md:flex-row gap-4 p-4 rounded-lg bg-gray-50 border border-gray-200"><div class="flex-shrink-0 w-20 h-20 bg-blue-100 text-blue-600 rounded-lg flex flex-col items-center justify-center"><span class="text-sm">ä»»åŠ¡</span><span class="text-3xl font-bold">${task.id}</span></div><div class="flex-grow"><h4 class="font-bold text-gray-900" ${isAdminEditing ? `contenteditable="true" data-key="title" data-week-index="${weekIndex}" data-task-index="${taskIndex}"` : ''}>${task.title} <span class="text-sm font-normal text-gray-500">(${task.duration})</span></h4><div class="mt-2"><p class="text-sm text-gray-700"><strong class="font-semibold">æ‰“å¡è¦æ±‚:</strong> <span ${isAdminEditing ? `contenteditable="true" data-key="checkIn" data-week-index="${weekIndex}" data-task-index="${taskIndex}"` : ''}>${task.checkIn}</span></p><p class="text-sm text-gray-500 mt-1"><strong class="font-semibold">è¿›é˜¶ä»»åŠ¡:</strong> <span ${isAdminEditing ? `contenteditable="true" data-key="advanced" data-week-index="${weekIndex}" data-task-index="${taskIndex}"` : ''}>${task.advanced}</span></p></div></div></div>`).join('')}</div></div>`).join('')}${isAdminEditing ? '<div class="mt-6 text-center"><button id="save-admin-edits" class="bg-green-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-600">ä¿å­˜ä¿®æ”¹å¹¶é€€å‡º</button></div>' : ''}`; if (isAdminEditing) { document.getElementById('save-admin-edits').addEventListener('click', saveAdminEdits); } }
        
        function renderCheckInForm() { 
            if (!currentUser) return; 
            const myCheckIns = checkIns.filter(ci => ci.userName === currentUser.name && ci.type);
            const lastCompletedBasicTaskId = myCheckIns.filter(ci => ci.type === 'basic').reduce((max, ci) => Math.max(max, ci.taskId || 0), 0);
            let formHTML = '';
            taskData.weeks.forEach(week => {
                week.tasks.forEach(task => {
                    const isBasicCompleted = myCheckIns.some(ci => (ci.taskId || 0) === task.id && ci.type === 'basic');
                    const isAdvancedCompleted = myCheckIns.some(ci => (ci.taskId || 0) === task.id && ci.type === 'advanced');
                    const isBasicUnlocked = task.id <= lastCompletedBasicTaskId + 1;
                    const isAdvancedUnlocked = isBasicCompleted;
                    formHTML += `<div class="mb-8 p-6 rounded-xl ${isBasicUnlocked ? 'bg-white border' : 'bg-gray-100 opacity-60'}"><h3 class="text-xl font-bold text-gray-900 mb-4">ä»»åŠ¡ ${task.id}: ${task.title}</h3><div class="mb-4 p-4 border border-blue-200 rounded-lg bg-blue-50"><h4 class="font-semibold text-blue-800">åŸºç¡€ä»»åŠ¡ (å¿…é¡»)</h4><p class="text-sm text-blue-700 mt-1">${task.checkIn}</p>${!isBasicUnlocked ? `<div class="mt-4 text-center py-3 bg-gray-200 text-gray-600 rounded-lg font-semibold">ğŸ”’ è¯·å…ˆå®Œæˆå‰é¢çš„ä»»åŠ¡</div>` : isBasicCompleted ? `<div class="mt-4 text-center py-3 bg-green-100 text-green-800 rounded-lg font-semibold">âœ… å·²å®Œæˆ</div>` : createCheckinForm(task.id, 'basic')}</div><div class="p-4 border border-gray-200 rounded-lg bg-gray-50"><div class="flex items-center"><input type="checkbox" id="toggle-advanced-${task.id}" class="advanced-task-toggle h-4 w-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500" data-task-id="${task.id}" ${!isAdvancedUnlocked || isAdvancedCompleted ? 'disabled' : ''}><label for="toggle-advanced-${task.id}" class="ml-3 block text-sm font-medium ${!isAdvancedUnlocked || isAdvancedCompleted ? 'text-gray-400' : 'text-gray-700 cursor-pointer'}">${isAdvancedCompleted ? 'âœ… å·²æŒ‘æˆ˜è¿›é˜¶ä»»åŠ¡' : 'æˆ‘è¦æŒ‘æˆ˜è¿›é˜¶ä»»åŠ¡ (å¯é€‰)'}</label></div><div id="advanced-content-${task.id}" class="hidden mt-4 pt-4 border-t border-gray-200"><p class="text-sm text-gray-600 mt-1">${task.advanced}</p>${isAdvancedUnlocked && !isAdvancedCompleted ? createCheckinForm(task.id, 'advanced') : ''}</div></div></div>`;
                });
            });
            checkinFormContainer.innerHTML = formHTML;
            checkinFormContainer.querySelectorAll('.checkin-form').forEach(form => form.addEventListener('submit', handleCheckInSubmit));
            checkinFormContainer.querySelectorAll('.drop-zone').forEach(initDropZone);
        }
        function createCheckinForm(taskId, taskType) {  const isBasic = taskType === 'basic'; const buttonColor = isBasic ? 'bg-blue-500 hover:bg-blue-600' : 'bg-purple-500 hover:bg-purple-600'; return `<form class="checkin-form mt-4" data-task-id="${taskId}" data-task-type="${taskType}"><textarea name="content" class="w-full p-2 border rounded-md" rows="3" placeholder="è®°å½•ä½ çš„å¿ƒå¾—ä½“ä¼š..." required></textarea><div class="mt-2"><div class="drop-zone"><input type="file" name="screenshot" accept="image/*,.heic,.heif" ${isBasic ? 'required' : ''}><p class="file-name-display text-gray-500">æ‹–æ‹½å›¾ç‰‡åˆ°æ­¤å¤„ï¼Œæˆ– <span class="text-blue-500 font-semibold">ç‚¹å‡»ä¸Šä¼ </span> (æ”¯æŒjpg,png,gif,heic)</p></div></div><div class="mt-4 flex items-center justify-between"><div class="flex items-center space-x-4"><label class="flex items-center"><input type="radio" name="display" value="real" class="mr-1" checked> å®åæ˜¾ç¤º</label><label class="flex items-center"><input type="radio" name="display" value="anonymous" class="mr-1"> åŒ¿åæ˜¾ç¤º</label></div><button type="submit" class="${buttonColor} text-white px-5 py-2 rounded-lg font-semibold">æäº¤æ‰“å¡</button></div></form>`; }
        
        function renderMyRecords() { 
            if (!currentUser) return; 
            const listDiv = document.getElementById('my-records-list'); 
            const myCheckIns = checkIns.filter(ci => ci.userName === currentUser.name);
            if (myCheckIns.length === 0) { listDiv.innerHTML = `<div class="text-center py-12 bg-white rounded-lg shadow-sm"><p class="text-gray-500">ä½ è¿˜æ²¡æœ‰ä»»ä½•æ‰“å¡è®°å½•ï¼Œå¿«å»â€œç«‹å³æ‰“å¡â€é¡µé¢å¼€å§‹å§ï¼</p></div>`; return; } 
            listDiv.innerHTML = myCheckIns.map(ci => { 
                const task = findTaskById(ci.taskId || 0); 
                const taskTypeName = (ci.type === 'basic' || !ci.type) ? 'åŸºç¡€ä»»åŠ¡' : 'è¿›é˜¶ä»»åŠ¡'; 
                const taskTypeColor = (ci.type === 'basic' || !ci.type) ? 'text-blue-600 bg-blue-100' : 'text-purple-600 bg-purple-100'; 
                return `<div class="bg-white p-6 rounded-xl shadow-sm border flex flex-col md:flex-row gap-6">
                            <div class="flex-shrink-0">
                                <p class="font-bold text-lg text-gray-800">ä»»åŠ¡ ${(ci.taskId || 'æœªçŸ¥')}: ${task.title}</p>
                                <div class="flex items-center gap-4">
                                    <p class="text-sm text-gray-500">æ‰“å¡äº ${new Date(ci.timestamp).toLocaleString()}</p>
                                    <span class="text-xs font-semibold px-2 py-1 rounded-full ${taskTypeColor}">${taskTypeName}</span>
                                </div>
                            </div>
                            <div class="flex-grow border-t md:border-t-0 md:border-l border-gray-200 pt-4 md:pt-0 md:pl-6">
                                <p class="text-gray-700 whitespace-pre-wrap">${ci.message || ci.content}</p>
                                ${ci.imageUrl ? `<a href="${ci.imageUrl}" target="_blank" class="mt-4 inline-block"><img src="${ci.imageUrl}" alt="æ‰“å¡æˆªå›¾" class="max-w-xs max-h-48 rounded-lg border shadow-sm"></a>` : ''}
                            </div>
                        </div>` 
            }).join(''); 
        }

        function renderPracticeSquare() {  
            if (!currentUser) return; 
            const listContainer = document.getElementById('practice-square-grid'); 
            const circlePosts = checkIns.filter(ci => ci.circle === currentUser.circle || currentUser.name === ADMIN_USER_FRONTEND_FLAG.name); 
            if (circlePosts.length === 0) { listContainer.innerHTML = `<div class="col-span-1 md:col-span-2 lg:col-span-3 text-center py-12 bg-white rounded-lg shadow-sm"><p class="text-gray-500">å®è·µå¹¿åœºè¿˜æ²¡æœ‰å†…å®¹ï¼Œæˆä¸ºç¬¬ä¸€ä¸ªåˆ†äº«çš„äººå§ï¼</p></div>`; return; } 
            listContainer.innerHTML = circlePosts.map(ci => { 
                const displayName = (ci.anonymous && ci.userName !== currentUser.name) ? `${ci.userName.slice(0, 1)}**` : ci.userName; 
                const avatarChar = ci.userName.slice(0, 1).toUpperCase(); 
                const task = findTaskById(ci.taskId || 0); 
                const taskTypeBadge = (ci.type === 'advanced') ? `<span class="absolute top-3 left-3 text-xs font-semibold px-2 py-1 rounded-full bg-purple-100 text-purple-600">è¿›é˜¶</span>` : ''; 
                return `<div class="bg-white rounded-xl shadow-sm border flex flex-col p-5 group relative cursor-pointer hover:shadow-lg hover:-translate-y-1 transition-all" data-post-id="${ci.id}">
                            ${currentUser.name === ADMIN_USER_FRONTEND_FLAG.name ? `<button class="admin-delete-post absolute top-2 right-2 w-8 h-8 bg-red-100 text-red-600 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity text-xl z-10" data-post-id="${ci.id}">Ã—</button>` : ''}
                            ${taskTypeBadge}
                            <div class="flex items-center mb-3">
                                <div class="w-10 h-10 bg-indigo-100 text-indigo-600 flex items-center justify-center rounded-full text-lg font-bold mr-3">${avatarChar}</div>
                                <div><p class="font-semibold text-gray-800">${displayName}</p><p class="text-xs text-gray-500">${new Date(ci.timestamp).toLocaleString()}</p></div>
                            </div>
                            <div class="flex-grow">
                                <h4 class="font-bold text-gray-900 mb-2">æ‰“å¡ä»»åŠ¡ ${(ci.taskId || 'æœªçŸ¥')}: ${task.title}</h4>
                                <p class="text-gray-600 text-sm mb-4 line-clamp-3">${ci.message || ci.content}</p> 
                                ${ci.imageUrl ? `<div class="w-full h-40 bg-gray-100 rounded-lg overflow-hidden"><img src="${ci.imageUrl}" alt="æ‰“å¡æˆªå›¾" class="w-full h-full object-cover"></div>` : ''}
                            </div>
                        </div>` 
            }).join(''); 
        }
        
        async function handleLogin(e) {
            e.preventDefault();
            const name = document.getElementById('login-name').value.trim();
            const password = document.getElementById('login-password').value.trim();
            const errorDiv = document.getElementById('login-error');
            errorDiv.classList.add('hidden'); 

            if (!name || !password) {
                errorDiv.textContent = 'å§“åå’Œå¯†ç ä¸èƒ½ä¸ºç©ºã€‚';
                errorDiv.classList.remove('hidden'); return;
            }
            showToast('æ­£åœ¨ç™»å½•...', 'loading');
            try {
                const endpoint = WORKER_URL.endsWith('/') ? `${WORKER_URL}login` : `${WORKER_URL}/login`;
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, password }),
                });
                const result = await response.json();
                document.querySelector('.toast.loading')?.remove();

                if (result.success && result.user) {
                    currentUser = result.user; 
                    sessionStorage.setItem('currentUser', JSON.stringify(currentUser));
                    authModal.classList.add('hidden');
                    loginForm.reset();
                    await init(); 
                } else {
                    errorDiv.textContent = result.error || 'ç™»å½•å¤±è´¥ï¼Œè¯·æ£€æŸ¥æ‚¨çš„å‡­æ®ã€‚';
                    errorDiv.classList.remove('hidden');
                }
            } catch (error) {
                document.querySelector('.toast.loading')?.remove();
                console.error('Login error:', error);
                errorDiv.textContent = 'ç½‘ç»œé”™è¯¯ï¼Œç™»å½•å¤±è´¥ã€‚';
                errorDiv.classList.remove('hidden');
            }
        }

        async function handleRegister(e) {
            e.preventDefault();
            const name = document.getElementById('register-name').value.trim();
            const password = document.getElementById('register-password').value.trim();
            const circle = document.getElementById('register-circle').value.trim();
            const errorDiv = document.getElementById('register-error');
            errorDiv.classList.add('hidden');

            if (!name || !password || !circle) {
                errorDiv.textContent = 'æ‰€æœ‰å­—æ®µå‡ä¸ºå¿…å¡«é¡¹ã€‚';
                errorDiv.classList.remove('hidden'); return;
            }
            showToast('æ­£åœ¨æ³¨å†Œ...', 'loading');
            try {
                const endpoint = WORKER_URL.endsWith('/') ? `${WORKER_URL}register` : `${WORKER_URL}/register`;
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, password, circle }),
                });
                const result = await response.json();
                document.querySelector('.toast.loading')?.remove();

                if (result.success && result.user) {
                    currentUser = result.user; 
                    sessionStorage.setItem('currentUser', JSON.stringify(currentUser));
                    authModal.classList.add('hidden');
                    registerForm.reset();
                    await init(); 
                } else {
                    errorDiv.textContent = result.error || 'æ³¨å†Œå¤±è´¥ï¼Œè¯·ç¨åå†è¯•ã€‚';
                    errorDiv.classList.remove('hidden');
                }
            } catch (error) {
                document.querySelector('.toast.loading')?.remove();
                console.error('Register error:', error);
                errorDiv.textContent = 'ç½‘ç»œé”™è¯¯ï¼Œæ³¨å†Œå¤±è´¥ã€‚';
                errorDiv.classList.remove('hidden');
            }
        }

        function handleLogout() { 
            currentUser = null; 
            sessionStorage.removeItem('currentUser'); 
            isAdminEditing = false; 
            init(); 
        }
        
        async function handleCheckInSubmit(e) {
            e.preventDefault();
            if (!currentUser) { showToast('è¯·å…ˆç™»å½•', 'error'); authModal.classList.remove('hidden'); return; }

            const form = e.target;
            const taskId = parseInt(form.dataset.taskId);
            const taskType = form.dataset.taskType;
            const content = form.querySelector('textarea[name="content"]').value.trim();
            const screenshotInput = form.querySelector('input[name="screenshot"]');
            const displayType = form.querySelector('input[name="display"]:checked').value;

            if (!content) {showToast('æ‰“å¡å†…å®¹ä¸èƒ½ä¸ºç©º', 'error'); return;}
            if (taskType === 'basic' && screenshotInput.files.length === 0) { showToast('åŸºç¡€ä»»åŠ¡éœ€ä¸Šä¼ æˆªå›¾', 'error'); return; }
            
            showToast('æ­£åœ¨æäº¤æ‰“å¡...', 'loading');

            const processSubmit = async (imageBase64) => {
                const checkInDataForServer = {
                    name: currentUser.name,
                    message: content,
                    circle: currentUser.circle, 
                    taskId: taskId,
                    type: taskType,
                    anonymous: displayType === 'anonymous',
                    imageUrl: imageBase64 
                };

                try {
                    const endpoint = WORKER_URL.endsWith('/') ? `${WORKER_URL}checkin` : `${WORKER_URL}/checkin`;
                    const response = await fetch(endpoint, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(checkInDataForServer),
                    });
                    const result = await response.json();
                     document.querySelector('.toast.loading')?.remove();

                    if (response.ok && result.success && result.data) {
                        checkIns.unshift(result.data); 
                        checkIns.sort((a,b) => new Date(b.timestamp) - new Date(a.timestamp));
                        showToast('æ‰“å¡æˆåŠŸï¼', 'success');
                        if (taskType === 'basic') checkForCompletion();
                        renderCheckInForm(); 
                        if (currentPageId === 'my-records-page') await showPage('my-records-page'); 
                        if (currentPageId === 'practice-square-page') await showPage('practice-square-page'); 
                    } else {
                        showToast(`æ‰“å¡å¤±è´¥: ${result.error || 'æœªçŸ¥é”™è¯¯'}`, 'error');
                    }
                } catch (error) {
                     document.querySelector('.toast.loading')?.remove();
                    console.error('Error submitting checkIn:', error);
                    showToast('ç½‘ç»œé”™è¯¯ï¼Œæ‰“å¡å¤±è´¥', 'error');
                }
            };

            if (screenshotInput.files.length > 0) {
                const file = screenshotInput.files[0];
                if (file.size > 2 * 1024 * 1024) { // 2MB limit
                    showToast('å›¾ç‰‡æ–‡ä»¶è¿‡å¤§(æœ€å¤§2MB)ã€‚', 'error');
                    document.querySelector('.toast.loading')?.remove(); return;
                }
                const reader = new FileReader();
                reader.onloadend = () => processSubmit(reader.result);
                reader.readAsDataURL(file);
            } else {
                processSubmit(null);
            }
        }

        function toggleAdminEdit() { isAdminEditing = !isAdminEditing; if (isAdminEditing) { adminEditButton.textContent = 'å–æ¶ˆç¼–è¾‘'; adminEditButton.classList.replace('bg-yellow-500', 'bg-gray-500'); adminEditButton.classList.replace('hover:bg-yellow-600', 'hover:bg-gray-600'); } else { adminEditButton.textContent = 'åˆ‡æ¢ç¼–è¾‘æ¨¡å¼'; adminEditButton.classList.replace('bg-gray-500', 'bg-yellow-500'); adminEditButton.classList.replace('hover:bg-gray-600', 'hover:bg-yellow-600'); } renderTaskOverview(); }
        function saveAdminEdits() {  const contentDiv = document.getElementById('overview-content'); contentDiv.querySelectorAll('[contenteditable="true"]').forEach(el => { const key = el.dataset.key; const weekIndex = el.dataset.weekIndex; const taskIndex = el.dataset.taskIndex; const newText = el.innerText; if (weekIndex && taskIndex) { taskData.weeks[weekIndex].tasks[taskIndex][key] = newText; } else if (weekIndex) { taskData.weeks[weekIndex].title = newText; } else { taskData[key] = newText; } }); localStorage.setItem('taskData', JSON.stringify(taskData)); showToast('ä»»åŠ¡æ¦‚è§ˆå·²ä¿å­˜ï¼', 'success'); isAdminEditing = false; toggleAdminEdit(); }
        
        async function handlePracticeCardClick(e) {
            const card = e.target.closest('[data-post-id]');
            if (!card) return;

            if (e.target.closest('.admin-delete-post')) {
                e.stopPropagation();
                const postId = e.target.closest('.admin-delete-post').dataset.postId;
                if (confirm('ç¡®å®šè¦æ°¸ä¹…åˆ é™¤è¿™æ¡æ‰“å¡è®°å½•å—ï¼Ÿ')) {
                    showToast('æ­£åœ¨åˆ é™¤...', 'loading');
                    try {
                        const deleteEndpoint = WORKER_URL.endsWith('/') ? `${WORKER_URL}checkin/${postId}` : `${WORKER_URL}/checkin/${postId}`;
                        const response = await fetch(deleteEndpoint, { method: 'DELETE' });
                        const result = await response.json();
                        document.querySelector('.toast.loading')?.remove();
                        if (response.ok && result.success) {
                            checkIns = checkIns.filter(ci => ci.id !== postId);
                            renderPracticeSquare();
                            showToast('è®°å½•å·²åˆ é™¤', 'success');
                        } else {
                            showToast(`åˆ é™¤å¤±è´¥: ${result.error || 'æœåŠ¡å™¨é”™è¯¯'}`, 'error');
                        }
                    } catch (error) {
                        document.querySelector('.toast.loading')?.remove();
                        console.error('Delete error:', error);
                        showToast('ç½‘ç»œé”™è¯¯ï¼Œåˆ é™¤å¤±è´¥', 'error');
                    }
                }
                return;
            }
            const postId = card.dataset.postId;
            const post = checkIns.find(ci => ci.id === postId);
            if (!post) return;
            const task = findTaskById(post.taskId || 0); 
            const displayName = (post.anonymous && currentUser && post.userName !== currentUser.name ) ? `${post.userName.slice(0, 1)}**` : post.userName;
            document.getElementById('detail-modal-title').innerText = `ä»»åŠ¡ ${(post.taskId || 'æœªçŸ¥')}: ${task.title}`;
            document.getElementById('detail-modal-content').innerHTML = `<div class="flex items-center mb-4"><div class="w-12 h-12 bg-indigo-100 text-indigo-600 flex items-center justify-center rounded-full text-xl font-bold mr-4">${post.userName.slice(0,1).toUpperCase()}</div><div><p class="font-bold text-lg">${displayName}</p><p class="text-sm text-gray-500">${new Date(post.timestamp).toLocaleString()}</p></div></div><h4 class="font-semibold text-gray-800 mt-6 mb-2">å¿ƒå¾—ä½“ä¼š:</h4><p class="text-gray-700 whitespace-pre-wrap bg-gray-50 p-4 rounded-lg">${post.message || post.content}</p>${post.imageUrl ? `<h4 class="font-semibold text-gray-800 mt-6 mb-2">æäº¤çš„æˆªå›¾:</h4><a href="${post.imageUrl}" target="_blank"><img src="${post.imageUrl}" class="w-full rounded-lg border shadow-sm cursor-pointer"/></a>` : ''}`;
            detailModal.classList.remove('hidden');
            setTimeout(() => { detailModal.querySelector('.transform').classList.remove('scale-95', 'opacity-0'); detailModal.querySelector('.transform').classList.add('scale-100', 'opacity-100'); }, 10);
        }

        function findTaskById(id) { for (const week of taskData.weeks) { const found = week.tasks.find(task => task.id === id); if (found) return found; } return { title: 'æœªçŸ¥ä»»åŠ¡' }; }
        function checkForCompletion() {  if(!currentUser) return; const myBasicCheckIns = checkIns.filter(ci => ci.userName === currentUser.name && ci.type === 'basic'); const totalTasks = taskData.weeks.reduce((acc, week) => acc + week.tasks.length, 0); if (myBasicCheckIns.length >= totalTasks) { const congratsModal = document.getElementById('congrats-modal'); congratsModal.classList.remove('hidden'); setTimeout(() => { congratsModal.querySelector('.transform').classList.remove('scale-95'); congratsModal.querySelector('.transform').classList.add('scale-100'); }, 10); } }
        function showToast(message, type = 'success') { const container = document.getElementById('toast-container'); const existingToast = container.querySelector(`.toast.${type}`); if (existingToast && existingToast.textContent === message) return;  const toast = document.createElement('div'); toast.className = `toast ${type}`; toast.textContent = message; container.appendChild(toast); setTimeout(() => toast.classList.add('show'), 10); setTimeout(() => { toast.classList.remove('show'); toast.addEventListener('transitionend', () => toast.remove()); }, type === 'loading' ? 10000 : 3500); } 
        function initDropZone(dropZone) {  const input = dropZone.querySelector('input[type="file"]'); const textDisplay = dropZone.querySelector('.file-name-display'); const updateText = (file) => { if (file) { textDisplay.textContent = file.name; textDisplay.classList.add('font-semibold', 'text-green-600'); } else { textDisplay.innerHTML = `æ‹–æ‹½å›¾ç‰‡åˆ°æ­¤å¤„ï¼Œæˆ– <span class="text-blue-500 font-semibold">ç‚¹å‡»ä¸Šä¼ </span> (æ”¯æŒjpg,png,gif,heic)`; textDisplay.classList.remove('font-semibold', 'text-green-600'); } }; dropZone.addEventListener('click', () => input.click()); input.addEventListener('change', () => { if(input.files.length > 0) updateText(input.files[0]); else updateText(null); }); dropZone.addEventListener('dragover', e => { e.preventDefault(); dropZone.classList.add('dragover'); }); ['dragleave', 'dragend'].forEach(type => { dropZone.addEventListener(type, () => dropZone.classList.remove('dragover')); }); dropZone.addEventListener('drop', e => { e.preventDefault(); dropZone.classList.remove('dragover'); if (e.dataTransfer.files.length) { input.files = e.dataTransfer.files; updateText(input.files[0]); } }); }
        
        function addEventListeners() {
            loginForm.addEventListener('submit', handleLogin);
            registerForm.addEventListener('submit', handleRegister);
            document.getElementById('show-register').addEventListener('click', (e) => { e.preventDefault(); loginForm.classList.add('hidden'); registerForm.classList.remove('hidden'); });
            document.getElementById('show-login').addEventListener('click', (e) => { e.preventDefault(); registerForm.classList.add('hidden'); loginForm.classList.remove('hidden'); });
            
            navLinks.forEach(link => link.addEventListener('click', (e) => { 
                e.preventDefault(); 
                document.dispatchEvent(new CustomEvent('navigateToPage', { detail: link.dataset.page }));
            }));
            document.addEventListener('navigateToPage', (e) => {
                showPage(e.detail);
            });

            adminEditButton.addEventListener('click', toggleAdminEdit);
            practiceSquareGrid.addEventListener('click', handlePracticeCardClick);
            document.getElementById('detail-modal-close').addEventListener('click', () => { const modalTransform = detailModal.querySelector('.transform'); modalTransform.classList.replace('scale-100', 'scale-95'); modalTransform.classList.replace('opacity-100', 'opacity-0'); setTimeout(() => detailModal.classList.add('hidden'), 200); });
            
            document.getElementById('auth-modal-close-button').addEventListener('click', () => {
                authModal.classList.add('hidden');
            });
            authModal.addEventListener('click', (e) => {
                if (e.target === authModal) { 
                    authModal.classList.add('hidden');
                }
            });

            checkinFormContainer.addEventListener('change', (e) => {
                if (e.target.matches('.advanced-task-toggle')) {
                    const checkbox = e.target;
                    const taskId = checkbox.dataset.taskId;
                    const contentDiv = document.getElementById(`advanced-content-${taskId}`);
                    if (checkbox.checked) {
                        contentDiv.classList.remove('hidden');
                    } else {
                        contentDiv.classList.add('hidden');
                    }
                }
            });
        }

        init();
    });
    </script>
</body>
</html>
